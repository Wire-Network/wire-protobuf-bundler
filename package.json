{
  "name": "@wireio/wire-protobuf-bundler",
  "version": "1.0.3",
  "description": "CLI that fetches .proto files from GitHub, runs protoc with Wire plugins, and generates publishable packages",
  "private": false,
  "type": "module",
  "types": "lib/index.d.ts",
  "module": "dist/bundle/wire-protobuf-bundler.mjs",
  "bin": {
    "wire-protobuf-bundler": "dist/bin/wire-protobuf-bundler.mjs"
  },
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "build:dev": "tsc -b tsconfig.json -w",
    "bundle": "node esbuild.config.js",
    "bundle:dev": "node esbuild.config.js -w",
    "dev": "concurrently npm:build:dev npm:bundle:dev",
    "dist": "pnpm build && pnpm bundle && pkg -c package.json --output dist/bin/wire-protobuf-bundler -d --options experimental-require-module dist/bundle/wire-protobuf-bundler.mjs",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "clean": "rm -rf lib dist",
    "postinstall": "npm run dist"
  },
  "pkg": {
    "assets": [
      "templates/**/*"
    ]
  },
  "files": [
    "lib",
    "dist/bin",
    "dist/bundle",
    "templates",
    "README.md"
  ],
  "dependencies": {
    "@wireio/protoc-gen-solana": "^1.0.3",
    "@wireio/protoc-gen-solidity": "^1.0.4",
    "@yao-pkg/pkg": "^6.14.1",
    "degit": "^2.8.4",
    "handlebars": "^4.7.8",
    "protoc-gen-solidity": "link:../../../Library/pnpm/global/5/node_modules/@wireio/protoc-gen-solidity",
    "tracer": "^1.3.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^24.5.3",
    "@types/yargs": "^17.0.33",
    "esbuild": "^0.27.3",
    "prettier": "^3.8.1",
    "protoc": "^29.6.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.30.2",
  "engines": {
    "node": ">=24"
  }
}
